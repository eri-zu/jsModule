<!-- prettier-ignore -->
<% const functionItems = [
  "01_vh", 
  "02_goTop", 
  "03_goPoint", 
  "04_scrollShow",
  "04_scrollShow2",
  "05_accordion", 
  "06_tab", 
  "07_lottie"
  ]; 
%> 
<% const motionHoverBtn = [
  "01_underline", 
  "02_bg", 
];%>
<% const motionHoverImg = [
  "01_scale", 
];%>

<div class="wrap">
  <div class="box">
    <div class="title"># function</div>
    <ul class="list">
      <% for (let i = 0; i < functionItems.length; i++) { %>
      <li class="item">
        <a
          href="https://eri-zu.github.io/jsModule/function/<%= functionItems[i] %>/dist"
          target="_blank"
          rel="noopener noreferrer"
          ><%= functionItems[i] %>
        </a>
      </li>
      <% } %>
    </ul>
  </div>

  <div class="box">
    <div class="title"># motion</div>
    <ul class="list">
      <li>
        <div class="category">hover</div>
        <ul class="list">
          <li class="list__item">
            <div class="subcategory">btn</div>
            <ul class="list">
              <% for (let i = 0; i < motionHoverBtn.length; i++) { %>
              <li class="item">
                <a
                  href="https://eri-zu.github.io/jsModule/motion/hover/btn<%= motionHoverBtn[i] %>/dist"
                  target="_blank"
                  rel="noopener noreferrer"
                  ><%= motionHoverBtn[i] %>
                </a>
              </li>
              <% } %>
            </ul>
          </li>
          <li class="list__item">
            <div class="subcategory">img</div>
            <ul class="list">
              <% for (let i = 0; i < motionHoverImg.length; i++) { %>
              <li class="item">
                <a
                  href="https://eri-zu.github.io/jsModule/motion/hover/btn<%= motionHoverImg[i] %>/dist"
                  target="_blank"
                  rel="noopener noreferrer"
                  ><%= motionHoverImg[i] %>
                </a>
              </li>
              <% } %>
            </ul>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
